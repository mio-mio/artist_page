
    <h1>お問い合わせ内容確認</h1>

    <%= form_for @contact, :url => contact_thanks_path do |f| %>
      <table>
        <tr>
          <th>名前</th>
          <td>
            <%= f.hidden_field :name %>
            <%= @contact.name %>
          </td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td>
            <%= f.hidden_field :email %>
            <%= @contact.email %>
          </td>
        </tr>
        <tr>
          <th>お問い合わせ内容</th>
          <td>
            <%= f.hidden_field :content %>
            <%= simple_format(@contact.message) %>
          </td>
        </tr>
      </table>
      <%= f.submit '送信', :class => 'btn btn-primary' %>
    <% end %>