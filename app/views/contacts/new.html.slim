- provide(:title, 'Contact Form')
.container-fluid
  .container_bg.img-rounded.col-xs-10.col-xs-offset-1
    .row
      .col-xs-6.col-xs-offset-3
        h1
          | Contact
        = form_for(@contact) do |f|
          = render 'shared/error_messages', object: f.object
          p
            = f.label :name
            |      
            = f.text_field :name
            br
          p
            = f.label :email
            |      
            = f.text_field :email
            br
          p
            = f.label :content
            |   
            = f.text_area :content, :size=>"70x10"
          .center
           |  All the field is required. 
           br
           br
           = f.submit "Submit", class: "btn btn-large btn-primary"