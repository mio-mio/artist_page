.container-fluid
  p

  h1
    = @song.title
  .row
    .col-sm-7
      .video-wrap
        p
          - if @song.youtube_id?
            |  <iframe src="https://www.youtube.com/embed/
            = @song.youtube_id
            | " frameborder="0" allowfullscreen>
    .col-sm-4
      p
        strong
          | Music:
        = link_to @song.music, @song.music_url, :target=>["_blank"]
      p
        strong
          | Lyrics:
        = @song.lyrics
      p
        strong
          | Singer:
        = @song.singer
      p
        - if @song.illustration?
          strong
            | Illustration:
          = @song.illustration
      p
        - if @song.pv_director?
          strong
            | Director:
          = @song.pv_director
      p
        - if @song.itunes_url?
          strong
            | This song is sold on 
            = link_to 'itunes', @song.itunes_url , :target=>["_blank"]
