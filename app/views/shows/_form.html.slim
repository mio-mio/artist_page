= form_for(@show) do |f|
  - if @show.errors.any?
    #error_explanation
      h2
        = pluralize(@show.errors.count, "error")
        |  prohibited this show from being saved:
      ul
        - @show.errors.full_messages.each do |message|
          li
            = message
  .field
    = f.label :title
    br
    = f.text_field :title
  .field
    = f.label :official_title
    br
    = f.text_area :official_title
  .field
    = f.label :offical_url
    br
    = f.text_field :offical_url
  .field
    = f.label :img_url
    br
    = f.text_field :img_url
  .field
    = f.label :sponser
    br
    = f.text_field :sponser
  .field
    = f.label :sponser_url
    br
    = f.text_field :sponser_url
  .field
    = f.label :broadcasting_station
    br
    = f.text_field :broadcasting_station
  .field
    = f.label :broadcasting_period
    br
    = f.text_field :broadcasting_period
  .field
    = f.label :youtube_id
    br
    = f.text_field :youtube_id
  .actions
    = f.submit
